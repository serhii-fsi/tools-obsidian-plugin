{
	"name": "obsidian-sample-plugin",
	"version": "1.0.0",
	"description": "This is a sample plugin for Obsidian (https://obsidian.md)",
	"main": "./dist/main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add ./dist/manifest.json versions.json",
		"copy-plugin": "node -r dotenv/config copy-files.js",
		"dev-with-copy": "nodemon --watch './src' --ext ts,css,json --exec 'npm run build && npm run copy-plugin'",
		"build-with-copy": "npm run build && npm run copy-plugin"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"dotenv": "^17.2.1",
		"esbuild": "^0.25.8",
		"nodemon": "^3.1.10",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	}
}
